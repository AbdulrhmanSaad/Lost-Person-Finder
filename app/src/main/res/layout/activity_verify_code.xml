<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".VerifyCodeActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout18"
        android:layout_width="388dp"
        android:layout_height="78dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/proxima_nova_semibold"
            android:text="Verify Your Email"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.309"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.448"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/backArrow_VerifyWithCode"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/arrow_vector"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.016"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.406"
            tools:ignore="MissingConstraints" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/img"
        android:layout_width="400dp"
        android:layout_height="289dp"
        android:layout_marginTop="11dp"
        android:padding="20dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout18"
        app:srcCompat="@drawable/img_verify_code"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/instructionTextView"
        android:layout_width="336dp"
        android:layout_height="69dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/proxima_nova_reg"

        android:gravity="center"
        android:text="Please enter the 4 digit code sent to debra.holt@example.com"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img"
        tools:ignore="MissingConstraints" />


    <TextView

        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/intermedium"
        android:text="Verification Code"
        android:textColor="@color/blue_gray"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.106"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/instructionTextView"
        tools:ignore="MissingConstraints" />

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="378dp"
        android:layout_height="104dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView22">

        <LinearLayout
            android:id="@+id/verification_code_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:orientation="horizontal">

            <EditText
                android:id="@+id/verification_code_1"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_margin="15dp"
                android:background="@drawable/rounded_corner_background"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textColorHint="@color/black"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/verification_code_2"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_margin="15dp"
                android:background="@drawable/rounded_corner_background"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"


                android:textColorHint="@color/black"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/verification_code_3"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_margin="15dp"
                android:background="@drawable/rounded_corner_background"
                android:gravity="center"

                android:inputType="number"

                android:maxLength="1"
                android:textColorHint="@color/black"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/verification_code_4"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_margin="15dp"
                android:background="@drawable/rounded_corner_background"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textColorHint="@color/black"
                android:textSize="24sp" />

        </LinearLayout>

    </RelativeLayout>

    <Button
        android:id="@+id/bt_VerifyCode"
        android:layout_width="367dp"
        android:layout_height="64dp"
        android:layout_marginTop="10dp"

        android:backgroundTint="@color/app_blue"
        android:fontFamily="@font/proxima_nova_semibold"
        android:text="Verify Code"
        android:textColor="@color/white"
        android:textSize="23sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.363"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout" />

    <TextView
        android:id="@+id/helpTextView"
        android:layout_width="218dp"
        android:layout_height="19dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="104dp"
        android:gravity="center_vertical"
        android:text="@string/tv_need_help"
        android:textColor="@color/blue_app"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_VerifyCode"
        app:layout_constraintVertical_bias="0.541" />

</androidx.constraintlayout.widget.ConstraintLayout>