<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ContactUsActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="388dp"
            android:layout_height="78dp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="11dp"
            tools:layout_editor_absoluteY="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/proxima_nova_semibold"
                android:text="Conatct Us"
                android:textColor="@color/black"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.25"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.51"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:id="@+id/ContactUsBackArrow"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/arrow_vector"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.07"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Get in Touch"
            android:fontFamily="@font/proxima_nova_medium"
            android:layout_marginStart="20dp"
            android:textSize="36sp"
            android:layout_marginVertical="5dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Our Friendly Team would love to hear from"
            android:fontFamily="@font/proxima_nova_reg"
            android:layout_gravity="left"
            android:textSize="18sp"
            android:layout_marginStart="20dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="you"
            android:fontFamily="@font/proxima_nova_reg"
            android:layout_gravity="left"
            android:textSize="18sp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/contactUsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout6"
            >
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:id="@+id/contactUs_firstName_Layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="10dp"
                android:hint="First Name"
                android:textColorHint="@color/black"
                app:counterEnabled="true"
                app:counterMaxLength="10"
                app:boxStrokeColor="@color/black"
                app:hintTextColor="@color/blue_app"
                app:cursorColor="@color/blue_app"
                app:placeholderTextColor="@color/blue_app"
                app:counterTextColor="@color/black"
                app:helperTextTextColor="@color/red"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/contactUs_firstNameEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:maxLength="10"
                    android:inputType="text"
                    />


            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:id="@+id/contactUs_LastName_Layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="110dp"
                android:layout_marginEnd="10dp"
                android:hint="Last Name"
                android:textColorHint="@color/black"
                app:counterEnabled="true"
                app:counterMaxLength="10"
                app:boxStrokeColor="@color/black"
                app:hintTextColor="@color/blue_app"
                app:cursorColor="@color/blue_app"
                app:placeholderTextColor="@color/blue_app"
                app:counterTextColor="@color/black"
                app:helperTextTextColor="@color/red"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/contactUs_lastName_EditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLength="10"
                    android:textColor="#000000"
                    android:inputType="text"
                    />


            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:id="@+id/contactUs_email_Layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="195dp"
                android:layout_marginEnd="10dp"
                android:hint="Email"
                android:textColorHint="@color/black"
                app:counterEnabled="true"
                app:counterMaxLength="15"
                app:boxStrokeColor="@color/black"
                app:hintTextColor="@color/blue_app"
                app:cursorColor="@color/blue_app"
                app:placeholderTextColor="@color/blue_app"
                app:counterTextColor="@color/black"
                app:helperTextTextColor="@color/red"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/contactUs_emailEditText"
                    android:autofillHints="emailAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLength="15"
                    android:textColor="#000000"
                    android:inputType="textEmailAddress"
                    />


            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:id="@+id/contactUS_phone_Layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="290dp"
                android:layout_marginEnd="10dp"
                android:hint="Phone Number"
                android:textColorHint="@color/black"
                app:counterEnabled="true"
                app:prefixTextColor="@color/black"
                app:counterMaxLength="10"
                app:boxStrokeColor="@color/black"
                app:hintTextColor="@color/blue_app"
                app:cursorColor="@color/blue_app"
                app:placeholderTextColor="@color/blue_app"
                app:counterTextColor="@color/black"
                app:endIconMode="custom"
                app:helperTextTextColor="@color/red"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/contactUs_phoneNummberEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:maxLength="10"
                    android:inputType="phone" />

            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/commentInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="385dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:hint="Enter Comment"
                app:counterEnabled="true"
                app:counterMaxLength="250"
                app:boxStrokeColor="@color/black"
                app:hintTextColor="@color/blue_app"
                app:helperTextTextColor="@color/red"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/commentEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:maxLength="250"
                    android:inputType="textMultiLine"
                    android:imeOptions="actionDone"
                    android:scrollbars="vertical"
                    android:gravity="top"
                    android:paddingBottom="100dp"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/contactus_constraintLayout_check"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="700dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"

                tools:ignore="MissingConstraints">

                <CheckBox
                    android:id="@+id/contactUs_checkboxPrivacyTerms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.003"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.033" />


                <TextView
                    android:id="@+id/contactus_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="You agree to our friendly "
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintLeft_toLeftOf="@+id/contactUs_checkboxPrivacyTerms"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.448"
                    app:layout_constraintHorizontal_bias="0.2"

                    />

                <TextView
                    android:id="@+id/contactUsPolicyLink"
                    android:layout_width="102dp"
                    android:layout_height="16dp"
                    android:text="Privacy Policy"
                    android:textColor="@color/blue_app"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:clickable="true"
                    app:layout_constraintLeft_toLeftOf="@+id/contactus_tv"
                    app:layout_constraintHorizontal_bias="0.70"
                    app:layout_constraintVertical_bias="0.4"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />


            </androidx.constraintlayout.widget.ConstraintLayout>

<Button
    android:id="@+id/contactUs_NextBtn"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@+id/contactus_constraintLayout_check"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_margin="15dp"
    android:background="@drawable/rounded_corner_background"
    android:text="NEXT"
    android:textSize="20sp"
    android:textColor="@color/white"
    android:enabled="false"

    />
        </androidx.constraintlayout.widget.ConstraintLayout>






    </LinearLayout>



</ScrollView>