<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".DetailsActivity1">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/backArrow_MPerson_Details_1_Activity"
            android:layout_width="32dp"
            android:layout_height="39dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="28dp"
            android:src="@drawable/arrow_vector"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="36dp"
            android:fontFamily="@font/proxima_nova_semibold"
            android:text="Missing Person Details"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/backArrow_MPerson_Details_1_Activity"
            app:layout_constraintTop_toTopOf="parent" />


        <!-- Your constraint layout 6 content -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="5dp"
            android:background="@color/blue_app"
            app:layout_constraintTop_toBottomOf="@+id/textView6"
            >

            <ImageView
                android:id="@+id/progressCircle1"
                android:layout_width="84dp"
                android:layout_height="84dp"
                android:layout_marginStart="280dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="43dp"
                android:src="@drawable/step1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/textViewCounter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1/7"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="@+id/progressCircle1"
                app:layout_constraintTop_toTopOf="@+id/progressCircle1"
                app:layout_constraintEnd_toEndOf="@+id/progressCircle1"
                app:layout_constraintBottom_toBottomOf="@+id/progressCircle1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="16dp"

                android:layout_marginEnd="252dp"
                android:layout_marginBottom="72dp"
                android:fontFamily="@font/proxima_nova_bold"
                android:paddingLeft="20dp"
                android:text="Basic Details"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginTop="84dp"
                android:layout_marginEnd="184dp"
                android:layout_marginBottom="11dp"
                android:fontFamily="@font/proxima_nova_semibold"
                android:paddingLeft="25dp"
                android:text="Next: Physical Description"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints" />

        </androidx.constraintlayout.widget.ConstraintLayout>



        <!-- Your constraint layout 7 content -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout6"
            >
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:id="@+id/textInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="10dp"
                android:hint="Missing Full Name"
                android:textColorHint="@color/black"
                app:helperText="Required*"
                app:counterEnabled="true"
                app:counterMaxLength="20"
                app:boxStrokeColor="@color/black"
                app:hintTextColor="@color/blue_app"
                app:cursorColor="@color/blue_app"
                app:placeholderTextColor="@color/blue_app"
                app:counterTextColor="@color/black"
                app:helperTextTextColor="@color/red"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:inputType="text"
                    />


            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:id="@+id/textInputLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="110dp"
                android:layout_marginEnd="10dp"
                android:hint="Gender"
                android:textColorHint="@color/black"
                app:helperText="Required*"
                app:counterEnabled="true"
                app:counterMaxLength="5"
                app:boxStrokeColor="@color/black"
                app:hintTextColor="@color/blue_app"
                app:cursorColor="@color/blue_app"
                app:placeholderTextColor="@color/blue_app"
                app:counterTextColor="@color/black"

                app:helperTextTextColor="@color/red"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:inputType="text"
                    />


            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:id="@+id/textInputLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="195dp"
                android:layout_marginEnd="10dp"
                android:hint="Date Of Birth"
                android:textColorHint="@color/black"
                app:helperText="Required*"
                app:counterEnabled="true"
                app:counterMaxLength="10"
                app:boxStrokeColor="@color/black"
                app:hintTextColor="@color/blue_app"
                app:cursorColor="@color/blue_app"
                app:placeholderTextColor="@color/blue_app"
                app:counterTextColor="@color/black"

                app:helperTextTextColor="@color/red"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:inputType="date"
                    />


            </com.google.android.material.textfield.TextInputLayout>
            <ImageView
                android:id="@+id/calender_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_calendar_month_24"
                android:layout_marginLeft="300dp"
                android:layout_marginBottom="20dp"
                app:layout_constraintStart_toStartOf="@+id/textInputLayout3"
                app:layout_constraintTop_toTopOf="@+id/textInputLayout3"
                app:layout_constraintBottom_toBottomOf="@id/textInputLayout3"
                app:layout_constraintEnd_toEndOf="@+id/textInputLayout3"
                />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:id="@+id/textInputLayout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="290dp"
                android:layout_marginEnd="10dp"
                android:hint="Nick Name"
                android:textColorHint="@color/black"
                app:helperText="Required*"
                app:counterEnabled="true"
                app:counterMaxLength="15"
                app:boxStrokeColor="@color/black"
                app:hintTextColor="@color/blue_app"
                app:cursorColor="@color/blue_app"
                app:placeholderTextColor="@color/blue_app"
                app:counterTextColor="@color/black"
                app:endIconMode="custom"
                app:helperTextTextColor="@color/red"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:inputType="text" />

            </com.google.android.material.textfield.TextInputLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>



        <!-- Your constraint layout 8 content -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="68dp"
            android:background="@drawable/border_top"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout7">

            <Button
                android:id="@+id/btn_next1"
                android:layout_width="141dp"
                android:layout_height="67dp"
                android:layout_marginEnd="10dp"
                android:backgroundTint="@color/blue_app"
                android:fontFamily="@font/proxima_nova_semibold"
                android:text="Next"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/btn_previous1"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btn_previous1"
                android:layout_width="141dp"
                android:layout_height="67dp"
                android:layout_marginStart="30dp"
                android:backgroundTint="#F0F0F0"
                android:fontFamily="@font/proxima_nova_semibold"
                android:text="Previous"
                android:textColor="@color/blue_app"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>